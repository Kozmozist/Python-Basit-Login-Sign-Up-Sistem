def dogrulama():
    sayi1 = random.randint(1,200)
    sayi2 = random.randint(1,100)

    kullanÄ±cÄ±_cevabÄ± = int(input(f'{sayi1} + {sayi2} = '))
    cevap = sayi1 + sayi2

    if kullanÄ±cÄ±_cevabÄ± == cevap:
        print('DoÄŸrulama baÅŸarÄ±lÄ± âœ”')
        return True

